{
	"private": true,
	"description": "Delightful Node.js Rest Framework",
	"scripts": {
		"postinstall": "cd website && yarn install",
		"test": "jest --maxWorkers=4",
		"lint": "tslint -c ./tslint.json --project ./tsconfig.json --format stylish",
		"clean": "node script/cleanup",
		"compile:only": "lerna run compile",
		"compile": "yarn clean && jest && lerna run compile",
		"publish:beta": "yarn compile && lerna publish prerelease --exact --preid beta --force-publish",
		"publish:rc": "yarn compile && lerna publish prerelease --exact --preid rc --force-publish",
		"publish:canary": "lerna run compile && lerna publish prerelease --exact --canary --preid canary --force-publish --yes",
		"publish:dev": "lerna run compile && lerna publish prerelease --exact --canary --preid rc1 --force-publish --yes",
		"publish:prod": "yarn compile && lerna publish && yarn clean",
		"benchmark": "ts-node benchmark/run",
		"doc:start": "cd website && yarn start",
		"doc:build": "cd website && yarn build"
	},
	"author": "Ketut Sandiarsa",
	"devDependencies": {
		"@types/jest": "^24.0.25",
		"@types/body-parser": "^1.17.1",
		"@types/cors": "^2.8.6",
		"@types/express": "^4.17.2",
		"@types/express-jwt": "^0.0.42",
		"@types/fs-extra": "^8.0.1",
		"@types/joi": "^14.3.4",
		"@types/jsonwebtoken": "^8.3.6",
		"@types/koa-better-body": "^3.1.2",
		"@types/koa-router": "^7.4.0",
		"@types/rimraf": "^2.0.3",
		"@types/supertest": "^2.0.8",
		"babel-core": "^6.26.3",
		"coveralls": "^3.0.9",
		"del": "^5.1.0",
		"edit-json-file": "^1.4.0",
		"jest": "^24.9.0",
		"lerna": "3.20.2",
		"faker": "^4.1.0",
		"pre-push": "^0.1.1",
		"reflect-metadata": "^0.1.13",
		"ts-jest": "^24.3.0",
		"tslint": "^5.20.1",
		"typescript": "^3.7.4",
		"autocannon": "^4.4.2",
		"benalu": "^2.0.0-beta-1",
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"express-jwt": "^5.3.1",
		"fs-extra": "^8.1.0",
		"joi": "^14.3.1",
		"jsonwebtoken": "^8.5.1",
		"koa-better-body": "^3.2.0",
		"koa-router": "^7.4.0",
		"rimraf": "^3.0.0",
		"supertest": "^4.0.2",
		"ts-node": "^8.6.2"
	},
	"workspaces": [
		"packages/*"
	],
	"pre-push": [
		"test"
	]
}