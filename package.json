{
	"private": true,
	"description": "Delightful Node.js Rest Framework",
	"scripts": {
		"postinstall": "cd website && yarn install",
		"test": "jest --maxWorkers=4",
		"lint": "tslint -c ./tslint.json --project ./tsconfig.json --format stylish",
		"clean": "node script/cleanup",
		"compile:only": "lerna run compile",
		"compile": "yarn clean && jest && lerna run compile",
		"build:pre": "yarn compile && lerna publish prerelease --exact --preid beta --force-publish",
		"build:canary": "lerna run compile && lerna publish prerelease --exact --canary --preid canary --force-publish --yes",
		"build:prod": "yarn compile && lerna publish && yarn clean",
		"benchmark": "yarn workspace plumier benchmark",
		"doc:start": "cd website && yarn start",
		"doc:build": "cd website && yarn build"
	},
	"author": "Ketut Sandiarsa",
	"devDependencies": {
		"@types/jest": "^24.0.19",
		"babel-core": "^6.26.3",
		"coveralls": "^3.0.7",
		"del": "^5.1.0",
		"edit-json-file": "^1.3.1",
		"jest": "^24.9.0",
		"lerna": "3.18.3",
		"pre-push": "^0.1.1",
		"reflect-metadata": "^0.1.13",
		"ts-jest": "^24.1.0",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"npm-check-updates": "3.1.25"
	},
	"workspaces": [
		"packages/*"
	],
	"pre-push": [
		"test"
	],
	"dependencies": {
		"@types/puppeteer": "^1.20.2",
		"puppeteer": "^1.20.0"
	}
}
